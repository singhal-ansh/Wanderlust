<% layout("/layouts/boilerplate")%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3><%= listing.title %></h3>
    </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image%>" class="card-img-top show-img" alt="listing_image">
            <div class="card-body">
              <p class="card-text">
                <i> <%= listing.owner.username %></i><br>
                <%= listing.description %> <br>
                &#8377; <%= listing.price%> <br>
                <%= listing.location %> <br>
                <%= listing.country %>
              </p>
            </div>
        </div>
          
        <br>
        <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
        <div class="btns">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>

            <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete </button>
            </form>
        </div>    
        <% } %>
        <div class="col-8 offset-3 mt-3">
            <hr>
            <% if(currentUser){ %>
            <h4> Leave a Review </h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating </label>
                    <input type="range" min="1" max="5" step="1" id="rating" name="review[rating]" class="form-range" style="width: 50%;">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comments </label>
                    <textarea id="comment" name="review[comment]" cols="30" rows="5" placeholder="Write your review here..." class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Please provide some comments.
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-dark mt-2">Submit Review</button>
            </form>
            <hr>
            <% } %>

            <h4>All Reviews</h4>
            <div class="row">
                <% for(let review of listing.reviews) { %>
                    <div class="card col-5 ms-3 mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@<%= review.author.username %></h5>
                            <p class="card-text"><%= review.comment %></p>
                            <p class="card-text"><%= review.rating %></p>
                    </div>
                    <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
    </div>
</div>